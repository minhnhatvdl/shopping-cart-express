<% include ../layouts/headerAdmin %>
<h1>Product page</h1>
<a href="admin-products/add-product">
    <button type="button" class="btn btn-outline-primary">Add a new product</button>
    <% if(products.length > 0) { %>
</a>
<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>#</th>
            <th>Product</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach((product, index) => {
                const { _id, title, description, category, price, image } = product; %>
            <tr>
                <td>
                    <%= index + 1 %>
                </td>
                <td>
                    <%= title %>
                </td>
                <td>
                    <%= description %>
                </td>
                <td>
                    <%= category %>
                </td>
                <td>
                    <%= price %>
                </td>
                <td>
                    <% if(image) { %>
                        <img src="/images/<%= category %>/<%= _id %>/<%= image %>" alt="<%= title %>">
                    <% } %>
                </td>
                <td>
                    <a href="/admin-products/edit-product/<%= _id %>">
                        <button type="button" class="btn btn-outline-warning">Edit</button>
                    </a>
                </td>
                <td>
                    <a href="/admin-products/delete-product/<%= _id %>">
                        <button type="button" class="btn btn-outline-danger">Delete</button>
                    </a>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>
<% } %>
<% include ../layouts/footerAdmin %>